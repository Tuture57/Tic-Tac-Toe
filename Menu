import tkinter
from tkinter import *
from tkinter import messagebox
import random as r

clef = 97


fenetre = Tk()
fenetre.config(bg = "#87CEEB") #Couleur fond d'Ã©cran
fenetre.geometry("640x480")
label = Label(fenetre, text="Bienvenue sur le jeu",padx=100, pady=50)
label.pack()
play = Button(fenetre, text="Play", command = fenetre.quit).pack(padx=300, pady=100)
fenetre.mainloop()





def update():
    fenetre.pack_forget()
    root.pack()

button['command'] = update
tk.mainloop()
